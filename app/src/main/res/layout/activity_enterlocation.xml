<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LocationModule.EnterlocationActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="207sp"
        android:background="@color/pro_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView1"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:layout_marginStart="70sp"
            android:layout_marginEnd="40sp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:iconifiedByDefault="false"
            app:layout_constraintBottom_toBottomOf="@+id/enterlocation_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/enterlocation_back"
            app:layout_constraintVertical_bias="1.0"
            app:queryHint="Enter/buliding/landmark/location" />

        <ImageView
            android:id="@+id/enterlocation_back"
            android:layout_width="25sp"
            android:layout_height="25sp"
            android:src="@drawable/enterlocation_arrow_back_24"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintlayout1"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginStart="90sp"
            android:layout_marginEnd="40sp"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/searchView1"
            tools:layout_editor_absoluteX="16dp">

            <TextView
                android:id="@+id/currentlocation"
                android:layout_width="191sp"
                android:layout_height="27sp"
                android:text="Use my Current location"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/locationsymbol"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginStart="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>