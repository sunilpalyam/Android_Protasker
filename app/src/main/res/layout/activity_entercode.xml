<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginpageModule.EnterCodeActivity">

    <TextView
        android:id="@+id/verificationcode"
        android:layout_width="match_parent"
        android:layout_height="41sp"
        android:layout_marginTop="93sp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:text="Verificationcode"
        android:textColor="@color/pro_black"
        android:textSize="31sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/constraintlayout"
        android:layout_width="330sp"
        android:layout_height="81sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verificationcode">


        <TextView
            android:id="@+id/verificationcode_sent_description"
            android:layout_width="330sp"
            android:layout_height="wrap_content"
            android:text="Please enter the 4-digit Verification Code Sent on"
            android:layout_marginTop="20sp"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView

            android:id="@+id/mobilenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="+6305243557"
            android:textStyle="bold"
            android:textColor="@color/pro_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/verificationcode_sent_description" />


</androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="260sp"
        android:layout_height="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintlayout">


        <EditText
            android:id="@+id/txt_edit1"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:background="@drawable/loginborderbackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txt_edit2"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:background="@drawable/loginborderbackground"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_edit1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <EditText
            android:id="@+id/txt_edit3"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:background="@drawable/loginborderbackground"
            android:layout_marginStart="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_edit2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <EditText
            android:id="@+id/txt_edit4"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:background="@drawable/loginborderbackground"
            android:layout_marginStart="22sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_edit3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/timer"
        android:layout_width="42sp"
        android:layout_height="26sp"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="57sp"
        android:layout_marginTop="96dp"
        android:layout_marginStart="50sp"
        android:layout_marginEnd="50sp"
        android:background="@color/pro_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timer" >

        <TextView
            android:layout_width="191sp"
            android:layout_height="27sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Login"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>