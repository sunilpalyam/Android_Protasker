<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelpCenterModule.HelpcenterActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/helpcenter_back"
        android:layout_width="36sp"
        android:layout_height="36sp"
        android:layout_marginStart="20sp"
        android:src="@drawable/categery_back"
        app:civ_border_color="@color/black"
        app:civ_border_width="1.2dp"
         android:layout_marginTop="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/helpcenter_tittle"
        android:layout_width="98sp"
        android:layout_height="41sp"
        android:layout_marginStart="50sp"
        android:text="HelpCenter"
        android:textAlignment="center"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/helpcenter_back"
        app:layout_constraintStart_toEndOf="@+id/helpcenter_back"
        app:layout_constraintTop_toTopOf="@+id/helpcenter_back" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintlayout"
        android:layout_width="match_parent"
        android:layout_height="172sp"
        android:layout_marginTop="20sp"
        android:layout_marginStart="15sp"
        android:layout_marginEnd="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helpcenter_tittle">

        <TextView
            android:id="@+id/termsandconditions"
            android:layout_width="150sp"
            android:layout_height="38sp"
            android:layout_marginTop="20sp"
            android:text="Terms &amp; conditions"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_marginStart="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/right_side_terms"
            android:layout_width="12sp"
            android:layout_height="13sp"
            android:layout_marginStart="168dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="@+id/termsandconditions"
            app:layout_constraintStart_toEndOf="@+id/termsandconditions"
            app:layout_constraintTop_toTopOf="@+id/termsandconditions"
            app:layout_constraintVertical_bias="0.56" />

        <TextView
            android:id="@+id/privacyandpolicy"
            android:layout_width="120sp"
            android:layout_height="38sp"
            android:layout_marginTop="10sp"
            android:layout_marginStart="20sp"
            android:text="PrivacyPolicy"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="17sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termsandconditions" />


        <ImageView
            android:id="@+id/right_side_privacy"
            android:layout_width="12sp"
            android:layout_height="13sp"
            android:layout_marginStart="196dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="@+id/privacyandpolicy"
            app:layout_constraintStart_toEndOf="@+id/privacyandpolicy"
            app:layout_constraintTop_toTopOf="@+id/privacyandpolicy"
            app:layout_constraintVertical_bias="0.48" />

        <TextView
            android:id="@+id/contactus"
            android:layout_width="143sp"
            android:layout_height="38sp"
            android:layout_marginTop="10sp"
            android:text="ContactUs"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textAlignment="center"
            android:layout_marginStart="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacyandpolicy" />


        <ImageView
            android:id="@+id/right_side_contactus"
            android:layout_width="12sp"
            android:layout_height="13sp"
            android:layout_marginStart="172dp"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            app:layout_constraintBottom_toBottomOf="@+id/contactus"
            app:layout_constraintStart_toEndOf="@+id/contactus"
            app:layout_constraintTop_toTopOf="@+id/contactus"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

      

</androidx.constraintlayout.widget.ConstraintLayout>