<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PostTaskModule.PostTask_Activity"
        android:layout_marginTop="-13dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="647dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/referandearn_card_background"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/backButton"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="58dp"
                    android:src="@drawable/baseline_arrow_back_24"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/referYourFriendandEarnTitle"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="86dp"
                    android:layout_marginTop="65dp"
                    android:gravity="center"
                    android:text="@string/refer_friend"
                    android:textColor="@android:color/white"
                    android:textSize="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/referandearnImage"
                    android:layout_width="0dp"
                    android:layout_height="165dp"
                    android:layout_marginTop="130dp"
                    android:scaleType="centerCrop"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/morethan"
                    android:layout_width="154dp"
                    android:layout_height="31dp"
                    android:layout_marginTop="296dp"
                    android:text="@string/more_than"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rmtitle"
                    android:layout_width="71dp"
                    android:layout_height="78dp"
                    android:layout_marginStart="98dp"
                    android:layout_marginTop="316dp"
                    android:gravity="center"
                    android:text="RM"
                    android:textColor="#F9E109"
                    android:textSize="45dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="116dp"
                    android:layout_height="46dp"
                    android:layout_marginStart="5sp"
                    android:layout_marginTop="306dp"
                    android:gravity="start"
                    android:text="100"
                    android:textColor="#F9E109"
                    android:textSize="45dp"
                    app:layout_constraintBottom_toBottomOf="@+id/rmtitle"
                    app:layout_constraintStart_toEndOf="@+id/rmtitle"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout"
                    android:layout_width="233dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="391dp"
                    android:background="#8A01F8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/referalcodetitle"
                        android:layout_width="107dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="@string/referral_code"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/referalcode"
                        android:layout_width="115dp"
                        android:layout_height="27dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="35dp"
                        android:gravity="center"
                        android:text="@string/code"
                        android:textColor="#FFFFFF"
                        android:textSize="21dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="1sp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20sp"
                        android:background="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/referalcode"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/copyCodeTitle"
                        android:layout_width="31dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20sp"
                        android:gravity="center"
                        android:text="@string/c_code"
                        android:textColor="#FFFFFF"
                        android:textSize="12dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/view1"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/summary1"
                    android:layout_width="312dp"
                    android:layout_height="20sp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="488dp"
                    android:gravity="center_vertical"
                    android:paddingStart="1sp"
                    android:text="@string/refer_text1"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/summary2"
                    android:layout_width="328dp"
                    android:layout_height="20sp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="515dp"
                    android:gravity="center_vertical"
                    android:paddingStart="1sp"
                    android:text="@string/refer_text2"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/summary3"
                    android:layout_width="296dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="544dp"
                    android:gravity="center_vertical"
                    android:paddingStart="1sp"
                    android:text="@string/refer_text3"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/invite_Friends"
            android:layout_width="331dp"
            android:layout_height="57dp"
            android:layout_marginTop="683dp"
            android:layout_marginBottom="60dp"
            android:background="@drawable/backgroundofhourly"
            android:gravity="center"
            android:text="@string/invite_frnd"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/invite"
            android:layout_width="331dp"
            android:layout_height="57dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="730dp"
            android:background="@drawable/backgroundofhourly"
            android:gravity="center"
            android:text="Invite Friends"
            android:textColor="@android:color/white"
            android:textSize="18dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>